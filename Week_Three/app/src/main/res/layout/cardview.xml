<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_cardview"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_bordes"
        android:layout_margin="@dimen/label_recycler"
        >

        <ImageView
            android:id="@+id/ivPets"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_pet"
            android:src="@drawable/dog_1"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_bordes">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBonesRaiting"
                    android:layout_width="@dimen/hueso_like"
                    android:layout_height="@dimen/hueso_like"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/hueso_raiting" />

                <TextView
                    android:id="@+id/tvNameDog"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/name_dog"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_5"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/ivbBonesCheck"
                    android:layout_width="@dimen/hueso_like"
                    android:layout_height="@dimen/hueso_like"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/hueso_like"
                    android:layout_gravity="end"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
